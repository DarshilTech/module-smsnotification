<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="smsnotification" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>SMS Notification</label>
            <tab>general</tab>
            <resource>DarshilTech_SmsNotification::config</resource>

            <!-- General Settings -->
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

            <!-- Provider Settings -->
            <group id="provider" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Provider Settings</label>

                <field id="provider_type" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Provider</label>
                    <source_model>DarshilTech\SmsNotification\Model\Config\Source\ProviderList</source_model>
                </field>

                <!-- Twilio-specific fields -->
                <field id="twilio_sid" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Account SID</label>
                    <comment>You can get SID by logging in at https://www.twilio.com</comment>
                    <depends>
                        <field id="provider_type">twilio</field>
                    </depends>
                </field>

                <field id="twilio_token" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auth Token</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="provider_type">twilio</field>
                    </depends>
                </field>

                <field id="twilio_number" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Twilio Phone Number</label>
                    <comment>Please enter the Twilio phone number you have purchased. Eg: +123XXXXXXX</comment>
                    <depends>
                        <field id="provider_type">twilio</field>
                    </depends>
                </field>

                <field id="twilio_service_id" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Twilio Service ID</label>
                    <comment>Enter Twilio service ID configured for notification service. Eg: ISXXXXXXX</comment>
                    <depends>
                        <field id="provider_type">twilio</field>
                    </depends>
                </field>
            </group>

            <!-- WhatsApp Notification Settings -->
            <group id="whatsapp" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>WhatsApp Notification</label>

                <field id="enable_whatsapp" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable WhatsApp Notification</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="whatsapp_sender_number" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sender WhatsApp Number</label>
                    <comment>Enter sender's WhatsApp number (with country code). Eg: +14155238886</comment>
                    <depends>
                        <field id="enable_whatsapp">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
